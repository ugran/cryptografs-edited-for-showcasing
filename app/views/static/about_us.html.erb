<script>
    $(document).ready(function(){
        $('.home-menu').on('click',function(){
            scrollTo = $(this).attr('scroll');
            scrollToObjectOffest = $('#'+scrollTo).offset().top;
            $("HTML, BODY").animate({ scrollTop: scrollToObjectOffest }, 500);
        });
        $(window).on('scroll',function() {
            $('.home-menu').each(function(index,element){
                $element = $(element);
                offset = 200+37.6*index;
                scrollTop = $(window).scrollTop();
                wwaOffset = $('#who-we-are').offset().top;
                wwaDistance = (wwaOffset - scrollTop);
                mcOffset = $('#mining-colocation').offset().top;
                mcDistance = (mcOffset - scrollTop);
                waOffset = $('#why-us').offset().top;
                waDistance = (waOffset - scrollTop);
                ooOffset = $('#our-objective').offset().top;
                ooDistance = (ooOffset - scrollTop);
                sOffset = $('#security').offset().top;
                sDistance = (sOffset - scrollTop);
                iOffset = $('#insurance').offset().top;
                iDistance = (iOffset - scrollTop);
                tOffset = $('#transparency').offset().top;
                tDistance = (tOffset - scrollTop);
                seOffset = $('#service').offset().top;
                seDistance = (seOffset - scrollTop);
                if (offset < wwaDistance) {
                    $element.css('color','black');
                } else if ( offset < mcDistance) {
                    $element.css('color','white');
                } else if ( offset < waDistance) {
                    $element.css('color', 'black');
                } else if ( offset < ooDistance) {
                    $element.css('color', 'white');
                } else if ( offset < sDistance) {
                    $element.css('color', 'black');
                } else if ( offset < iDistance) {
                    $element.css('color', 'white');
                } else if ( offset < tDistance) {
                    $element.css('color', 'black');
                } else if ( offset < seDistance) {
                    $element.css('color', 'white');
                } else if ( offset > seDistance) {
                    $element.css('color', 'black');
                }
            });
        });
    });
</script>
